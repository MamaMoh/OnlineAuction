@model Product
@using Dotnet6MvcLogin.Data;

@{
    ViewData["Title"] = "Create a new product";
}

<div class="content-wraper pt-60 pb-60">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>Add Product</h3>
                    <div class="progressbar">
                        <div class="progress" id="progress"></div>

                        <div class="progress-step progress-step-active"
                 data-title="Product"></div>
            <div class="progress-step" data-title=" Owner"></div>
            <div class="progress-step" data-title=" Address"></div>
            <div class="progress-step" data-title="Product Detail"></div>
                    </div>

                    <div class="form-step form-step-active">
                        <div class="row">

                     
                        <div class="col-md-6">
                            <div class="checkout-form-list">
                        <label asp-for="ProductName">Product Name  <span class="required">*</span></label>
                        <input asp-for="ProductName" type="text">
                        <span asp-validation-for="ProductName" class="text-danger"></span>

                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkout-form-list">
                            <label>Product Category <span class="required">*</span></label>
                        <select asp-for="productCategory" asp-items="Html.GetEnumSelectList<ProductCategory>()" class=" nice-select wide">
                            </select>
                        <span asp-validation-for="productCategory" class="text-danger"></span>

                        </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkout-form-list">
                                <label>Product Image <span class="required">*</span></label>
                        <input asp-for="ImageURL" type="file">
                        <span asp-validation-for="ImageURL" class="text-danger"></span>

                        <div class="col-md-4 offset-4 text-center">
                            <img width="50%" id="ImageUrlPreview" />
                        </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="checkout-form-list">
                                <label>Product Status <span class="required">*</span></label>
                        <select asp-for="productStaus" asp-items="Html.GetEnumSelectList<ProductStaus>()" class=" nice-select wide">
                        </select>
                        <span asp-validation-for="ImageURL" class="text-danger"></span>

                            </div>
                        </div>

            <div class="col-md-6">
                    <a href="#" class="btn btn-next width-20 ml-auto btn-warning">Next</a>
                        </div>
                    </div>
        </div>
        
         <div class="form-step ">
            <div class="row">

                   
                    <div class="col-md-6">
                        <div class="checkout-form-list">
                        <label asp-for="FirstName">First Name <span class="required">*</span></label>
                            <input asp-for="FirstName" placeholder="" type="text">
                        <span asp-validation-for="FirstName" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="checkout-form-list">
                        <label asp-for="LastName">Last Name <span class="required">*</span></label>
                        <input asp-for="LastName" placeholder="" type="text">
                        <span asp-validation-for="LastName" class="text-danger"></span>

                        </div>
                        </div>
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="CompanyName">Company Name <span class="required">*</span></label>
                        <input asp-for="CompanyName" placeholder="" type="text">
                        <span asp-validation-for="CompanyName" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="PhoneNumber">Phone  <span class="required">*</span></label>
                        <input asp-for="PhoneNumber" type="text">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                        <div class="btns-group">
                        <a href="#" class="btn btn-prev btn-warning">Previous</a>
                        <a href="#" class="btn btn-next btn-warning">Next</a>
                        </div>
                        </div>
                        </div>
                        </div>
            <div class="form-step ">
                <div class="row">



                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="Address">Address<span class="required">*</span></label>
                        <input  asp-for="Address" placeholder="" type="text">
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="Country">Country <span class="required">*</span></label>
                        <input asp-for="Country" placeholder="" type="text">
                        <span asp-validation-for="Country" class="text-danger"></span>

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="State">State / Region <span class="required">*</span></label>
                        <input asp-for="State" placeholder="" type="text">
                        <span asp-validation-for="State" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="City">Town / City <span class="required">*</span></label>
                        <input asp-for="City" type="text">
                        <span asp-validation-for="City" class="text-danger"></span>

                    </div>
                </div>
               
               
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="Email">Email Address <span class="required">*</span></label>
                        <input asp-for="Email" placeholder="" type="email">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="checkout-form-list">
                        <label asp-for="PostalCode">ZIP/Postal Code <span class="required">*</span></label>
                        <input asp-for="PostalCode" placeholder="" type="text">
                        <span asp-validation-for="PostalCode" class="text-danger"></span>

                    </div>
                </div>
                    <div class="col-md-6">
                        <div class="btns-group">
                        <a href="#" class="btn btn-prev btn-warning">Previous</a>
                        <a href="#" class="btn btn-next btn-warning">Next</a>
                        </div>
                    </div>





                </div>
                </div>
        <div class="form-step ">
            <div class="row">
                
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <label asp-for="productDimention">Dimention<span class="required">*</span></label>
                        <select asp-for="productDimention" asp-items="Html.GetEnumSelectList<ProductDimention>()" class=" nice-select wide">
                        </select>
                        <span asp-validation-for="productDimention" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <div class="quantity">

                            <label asp-for="Quantity">Quantity <span class="required">*</span></label>
                        <div class="cart-plus-minus">
                                <input asp-for="Quantity" class="cart-plus-minus-box" min="100" value="100" type="text" required>
                            <div class="dec qtybutton"><i class="fa fa-angle-down"></i></div>
                            <div class="inc qtybutton"><i class="fa fa-angle-up"></i></div>
                                <span asp-validation-for="Quantity" class="text-danger"></span>

                        </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <label asp-for="Weight">Weight(Kg)<span class="required">*</span></label>
                        <input asp-for="Weight" type="text">
                        <span asp-validation-for="Weight" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-3">
                    
                </div>
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <label asp-for="StartDate">Start Date<span class="required">*</span></label>
                        <input asp-for="StartDate" type="date">
                        <span asp-validation-for="StartDate" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <label asp-for="EndDate">End Date<span class="required">*</span></label>
                        <input asp-for="EndDate" type="date">
                        <span asp-validation-for="EndDate" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-3">
                    <div class="checkout-form-list">
                        <label asp-for="StartingPrice">Starting Price (in Birr)<span class="required">*</span></label>
                        <input asp-for="StartingPrice" type="text">
                        <span asp-validation-for="StartingPrice" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="checkout-form-list">
                        <label asp-for="ProductDetail">Product Detail<span class="required">*</span></label>
                        <textarea asp-for="ProductDetail" class="form-control" id="exampleFormControlTextarea3" rows="7"></textarea>
                        <span asp-validation-for="ProductDetail" class="text-danger"></span>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="btns-group">
                        <a href="#" class="btn btn-prev btn-warning">Previous</a>
                        <button  type="submit"class="btn btn-warning">Submit</button>
                    </div>
                </div>





            </div>
        </div>
               
        </form>
         </div>

    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
