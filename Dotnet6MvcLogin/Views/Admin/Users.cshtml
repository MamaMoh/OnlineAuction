@using Dotnet6MvcLogin.ViewModels
@model IEnumerable<UserViewModel>


<div class="Shopping-cart-area pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="#">
                    <div class="table-content table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="li-product-thumbnail">images</th>
                                    <th class="cart-product-name">UserName</th>
                                    <th class="li-product-name">First Name</th>
                                    <th class="li-product-name">Last Name</th>
                                    <th class="li-product-name">Email</th>
                                    <th class="li-product-name">Roles</th>
                                    <th class="li-product-remove">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                 @foreach (var user in Model)
                {
                                    <tr>
                                        
                                        <td class="li-product-thumbnail"><a href="#"><img class="img-circle" src="~/template/images/product/small-size/12.jpg" style="max-width:70px;" alt="Li's Product Image"></a></td>
                                        <td class="li-product-name font-weight-light"> @Html.DisplayFor(modelItem => user.UserName)</td>
                                        <td class="li-product-name font-weight-light"> @Html.DisplayFor(modelItem => user.FirstName)</td>
                                        <td class="li-product-name font-weight-light"> @Html.DisplayFor(modelItem => user.LastName)</td>
                                        <td class="li-product-name font-weight-light"> @Html.DisplayFor(modelItem => user.Email)</td>
                                        <td class="li-product-name font-weight-light"> @Html.DisplayFor(modelItem => user.Roles)</td>
                                        <td class="align-middle">
                                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pencil-square"></i>Edit </a> |
                                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@user.Id"><i class="bi bi-eye"></i>Details </a> |
                                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash"></i>Delete </a>
                                        </td>
                                    </tr>}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

